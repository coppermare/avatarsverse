{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"]
  },
  "include": ["core/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "app", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
